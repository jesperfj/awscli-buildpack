#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

indent() {
  sed -u 's/^/       /'
}

cd $BUILD_DIR

curl "https://s3.amazonaws.com/aws-cli/awscli-bundle.zip" -o "awscli-bundle.zip"
unzip awscli-bundle.zip
mkdir bin
./awscli-bundle/install -b ~/bin/aws

mkdir .profile.d
echo "export PATH=$PATH:$HOME/bin" > .profile.d/setpath
